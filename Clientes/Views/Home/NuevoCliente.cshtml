<h1>Nuevo Cliente</h1>

<form>
    <div class="form-group">
        <label for="exampleFormControlInput1">Nombre</label>
        <input id="Nombre" type="text" class="form-control" placeholder="Nombre" >
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Cuenta</label>
        <input id="Cuenta" type="text" class="form-control" placeholder="Cuenta">
    </div><div class="form-group">
        <label for="exampleFormControlInput1">Email</label>
        <input id="Email" type="email" class="form-control" placeholder="Email" required>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Contraseña</label>
        <input id="Contraseña" type="text" class="form-control" placeholder="Contraseña">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Fecha de vencimiento de la Cuenta</label>@*validacion datetime*@
        <input id="VencimientoC" type="datetime" class="form-control" placeholder="VencimientoC">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Fecha de vencimiento del Cliente</label>@*validacion datetime*@
        <input id="VencimientoP" type="datetime" class="form-control" placeholder="VencimientoP">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Tipo</label>
        <select class="form-control" id="Tipo">
            <option value="2">@Tipo.Flow</option>
            <option value="3">@Tipo.IPTV</option>
            <option value="1">@Tipo.Netflix</option>
            <option value="5">@Tipo.AmazonPrime</option>
            <option value="4">@Tipo.DirecTVGo</option>
            <option value="6">@Tipo.Spotify</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Cantidad de pantallas</label>
            <input id="Pantallas" type="text" class="form-control" placeholder="Pantallas">
    </div>


    <div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Comentario</label>
            <textarea class="form-control" id="Comentario" rows="3"></textarea>
        </div>
    </div>

</form>


<button onclick="Nuevo()" class="btn btn-outline-success btn-lg">Enviar</button>