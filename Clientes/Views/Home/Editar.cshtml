@model Clientes

<h1>Editar</h1>
<form>
    <div class="form-group">
        <label for="exampleFormControlInput1">Nombre</label>
    </div>        <input id="Nombre" type="text" class="form-control" placeholder="@Model.Nombre" value="@Model.Nombre" required>

    <div class="form-group">
        <label for="exampleFormControlInput1">Cuenta</label>
        <input id="Cuenta" type="text" class="form-control" placeholder="@Model.Cuenta" value="@Model.Cuenta">
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Contraseña</label>
        <input id="Contraseña" type="text" class="form-control" placeholder="@Model.Contraseña" value="@Model.Contraseña">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Fecha de vencimiento de la Cuenta</label>@*validacion datetime*@
        <input id="VencimientoC" type="datetime" class="form-control" placeholder="@Model.VencimientoC" value="@Model.VencimientoC">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Fecha de vencimiento del Cliente</label>@*validacion datetime*@
        <input id="VencimientoP" type="datetime" class="form-control" placeholder="@Model.VencimientoP" value="@Model.VencimientoP">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Tipo</label>
        <select id="Tipo" class="form-control">
            <option value="@Model.Tipo">@(((Tipo)Model.Tipo).ToString())</option>
            <option value="2">@Tipo.Flow</option>
            <option value="3">@Tipo.IPTV</option>
            <option value="1">@Tipo.Netflix</option>
            <option value="5">@Tipo.AmazonPrime</option>
            <option value="4">@Tipo.DirecTVGo</option>
            <option value="6">@Tipo.Spotify</option>

        </select>
    </div>


    <div class="form-group">
        <label for="exampleFormControlSelect1">Cantidad de pantallas</label>
        <input id="Pantallas" type="text" class="form-control" placeholder="@Model.Pantallas" value="@Model.Pantallas">
    </div>

    <div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Comentario</label>
            <textarea class="form-control" id="Comentario" rows="3" value="@Model.Comentario"></textarea>
        </div>
    </div>


</form>
<button onclick="EnviarEdicion('@Model.Id')"class="btn btn-outline-success btn-lg">Enviar</button>