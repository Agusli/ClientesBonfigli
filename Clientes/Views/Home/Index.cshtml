@model List<ClienteModel>
@{
    ViewData["Title"] = "Home Page";
}


<div>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand"><h2>Buscar Cliente</h2></a>
        <input class="form-control mr-sm-2" onkeyup="BuscarCliente()" type="search" aria-label="Search" id="Search">
    </nav>
</div>


<a href="#>"<a onclick="agregar()" id="nuevo"class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Agregar"><i class="fas fa-plus-circle"></i></a>

<a class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Buscar" href="#" id="buscar"><i class="fas fa-search"></i></a>




<table id="customers">
    <tr>
        <th>Tipo</th>
        <th>Id</th>
        <th>Nombre</th>
        <th>Cuenta</th>
        <th>Email</th>
        <th>Contraseña</th>
        <th>Vencimiento Cliente</th>
        <th>Vencimiento Cuenta</th>
        <th>Pantallas</th>
        <th>Comentario</th>
        <th style="background-color:red">Borrar</th>
        <th style="background-color:darkblue">Editar</th>
    </tr>

    @foreach (var item in Model)//desconfigure la exepcion
    {

        <tr id="@item.Id" class="DataRows">
            <td id="@item.Tipo.ToString()"></td>
            <td>@item.Id</td>
            <td>@item.Nombre</td>
            <td>@item.Cuenta</td>
            <td>@item.Email</td>
            <td>@item.Contraseña</td>
            <td>@item.VencimientoC</td>
            <td>@item.VencimientoP</td>
            <td>@item.Pantallas</td>
            <td>@item.Comentario</td>

            <td>
                <a onclick="Borrar('@item.Id')" id="confirm" class="IconBtn"><i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Eliminar"></i></a>
            </td>
            <td>
              <a onclick="Editar('@item.Id')" class="IconBtn" data-toggle="tooltip"><i class="far fa-edit"data-toggle="tooltip" data-placement="top" title="Editar"></i></a>
            </td>
        </tr>


    }

</table>






